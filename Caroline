//The file can be changed easily
String myFileName = "text.txt";


try { //file might not exist
    Scanner myFile = new Scanner(new FileReader(myFileName));

    if (myFile.hasNext()) {

        //There is something in the file

        String input = myFile.nextLine();
        System.out.println(myFile)

    } else {

        //The file is empty

        System.out.println("The file is empty");

    }

} catch (Exception e) {
    System.out.println("Unable to find the file " + myFileName)
}